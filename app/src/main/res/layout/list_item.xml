<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewLabelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:text="@string/last_name"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textViewLabelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewLabelName"
        android:layout_marginRight="5dp"
        android:text="@string/date_of_birth"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textViewLabelPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewLabelDate"
        android:layout_marginRight="5dp"
        android:text="@string/phone_number"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewLabelName"
        android:layout_toRightOf="@+id/textViewLabelName"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textViewLabelDate"
        android:layout_alignBottom="@+id/textViewLabelDate"
        android:layout_toRightOf="@+id/textViewLabelDate"
        android:layout_toEndOf="@+id/textViewLabelDate" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDate"
        android:layout_toEndOf="@+id/textViewLabelPhone"
        android:layout_toRightOf="@+id/textViewLabelPhone"
        android:text="TextView" />
</RelativeLayout>